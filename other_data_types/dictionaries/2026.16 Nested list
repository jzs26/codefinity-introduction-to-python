#get a value from a nested list

nested_list = [[10, 20, 30], [44, 55, 66], [77, 87, 99]]
value = nested_list[1][1]
#print(value)

#flatten nested list
list_of_lists = [[1, 2], [3, 4], [5, 6, 7]]
#expected output = [1, 2, 3, 4, 5, 6, 7]
def flatten_list_comprehension(list_of_lists):
    return[item for sublist in list_of_lists for item in sublist]
flatten_list_result = flatten_list_comprehension(list_of_lists)
print(flatten_list_result)

#Add new item to list after a specified item
list1 = [10, 20, [300, 400, [5000, 6000], 500], 30, 40]
#outout = [10, 20, [300, 400, [5000, 6000, 7000], 500], 30, 40]

list1[2][2].append(7000)
print(list1)

#add a sublist to a nested list
list1 = ["a", "b", ["c", ["d", "e", ["f", "g"], "k"], "l"], "m", "n"]
sub_list = ["h", "i", "j"]
list1[2][1][2].append(sub_list)
#print(list1)

#replace a specific value in a list with its first appearance
list1 = [5, 10, 15, 20, 25, 50, 20]
#output [5, 10, 15, 200, 25, 50, 20]
list1[3] = 200
print(list1)
