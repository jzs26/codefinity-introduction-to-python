class Solution(object):
    def solve(self,a:int,b:int,c:int)->int:
        print(f"a: {a}, b: {b}, c: {c}")
        v1 = a + b * c
        v2 = a * (b + c)
        v3 = a * b * c
        v4 = (a + b) * c
        result = max(v1, v2, v3, v4)
        return result

sol = Solution()
print(sol.solve(2, 3, 4))
